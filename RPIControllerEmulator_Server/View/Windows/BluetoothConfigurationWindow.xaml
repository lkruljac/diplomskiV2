<Window x:Class="RPIControllerEmulator_Server.View.Windows.BluetoothConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPIControllerEmulator_Server.View.Windows"
        mc:Ignorable="d"
        Title="BluetoothConfigurationWindow" Height="450" Width="800">
    <Grid>
       
        <Button Name="ListBTDevices_Button" Content="List Bluetooth Devices"  HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top" Width="292" Click="ListBTDevices_Button_Click" Grid.ColumnSpan="3"/>
        <ListBox Name="BluetoothDevices_List" HorizontalAlignment="Left" Height="133" Margin="10,101,0,0" VerticalAlignment="Top" Width="610"/>
        <Label Name="Info_Label" Content="Bla" HorizontalAlignment="Left" Margin="363,43,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.751,1.298"/>
        <Button Name="Pair_Button" Content="Pair" HorizontalAlignment="Left" Margin="642,114,0,0" VerticalAlignment="Top" Width="116" RenderTransformOrigin="0.513,-0.861" Click="Pair_Button_Click"/>
        <Button Name="Connect_Button" Content="Connect" HorizontalAlignment="Left" Margin="642,180,0,0" VerticalAlignment="Top" Width="116" Click="Connect_Button_Click"/>

    </Grid>
</Window>
